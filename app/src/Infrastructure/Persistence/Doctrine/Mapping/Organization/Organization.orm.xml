<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Preventool\Domain\Organization\Model\Entity\Organization" table="organization">

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="uuid" type="guid" />
        <field name="email" length="100" />
        <field name="name" length="200" />
        <field name="legalDocument" length="100" nullable="true"/>
        <field name="address" type="string" nullable="true"/>
        <field name="isActive" type="boolean"/>
        <field name="createdOn" type="datetime" />
        <field name="updatedOn" type="datetime" />

        <many-to-one field="creator" target-entity="User" >
            <join-column name="creator_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="updater" target-entity="User">
            <join-column name="updater_id" referenced-column-name="id" />
        </many-to-one>


        <unique-constraints>
            <unique-constraint name="U_organization_email" columns="email"/>
            <unique-constraint name="U_organization_uuid" columns="uuid"/>
        </unique-constraints>

        <indexes>
            <index name="IDX_organization_is_active" columns="is_active"/>
        </indexes>

    </entity>
</doctrine-mapping>